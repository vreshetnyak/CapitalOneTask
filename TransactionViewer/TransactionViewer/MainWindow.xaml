<Window x:Class="TransactionViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction Viewer">
    <Grid MinWidth="800"
          MinHeight="600">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Expander Grid.Row="0"
                  IsExpanded="True"
                  Margin="5"
                  Header="Filter goes here"/>

        <TabControl Margin="5"
                    Grid.Row="1">
            <TabItem Header="Grid">
            </TabItem>
            <TabItem Header="Raw">
            </TabItem>
        </TabControl>                
    </Grid>
</Window>
